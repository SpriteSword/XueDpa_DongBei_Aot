<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:rt="using:XueDpa_DongBei_Aot"
             xmlns:vm="using:XueDpa_DongBei_Aot.ViewModels"

             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"

             x:Class="XueDpa_DongBei_Aot.Views.TodayDetailView"
             x:CompileBindings="True"

             DataContext="{CompiledBinding (rt:ServiceLocator).TodayDetailViewModel, Source={StaticResource ServiceLocator}}"
             x:DataType="vm:TodayDetailViewModel">

	<ScrollViewer >
		<StackPanel Margin="8">
			<Label FontSize="18"
			       Margin="0,0,0,8"
			       HorizontalAlignment="Center"
			       Content="{Binding TodayPoetry.Name}" />
			<StackPanel Orientation="Horizontal"
			            HorizontalAlignment="Center"
			            Margin="0,0,0,8">
				<Label FontSize="12"
				       Content="{Binding TodayPoetry.Dynasty}" />
				<Label FontSize="12"
				       Content=" · " />
				<Label FontSize="12"
				       Content="{Binding TodayPoetry.Author}" />
			</StackPanel>

			<Label FontSize="18"
			       HorizontalAlignment="Center"
			       Margin="0,0,0,8"
			       Content="{Binding TodayPoetry.Content}" />

			<Button IsEnabled="False"
			        HorizontalAlignment="Center"
			        Content="在本地数据库中查找" />
			<!-- Command="{Binding QueryCmnd}"/> -->

		</StackPanel>



	</ScrollViewer>
</UserControl>